// http://www.omdbapi.com/?i=tt3896198&apikey=8e3ddd4c
// http://www.omdbapi.com/?i=tt3896198&apikey=8e3ddd4c&s=fast



async function onSearchChange(id) {
    const id = event.target.value
    const response = await fetch("http://www.omdbapi.com/?i=tt3896198&apikey=8e3ddd4c&s=fast")
    const responseData = await response.json()
    userListEl.innerHTML = responseData.map(user => `<div class="user-card" onclick ="showPosts(${user.id})">
    <div class="user-card__container">
      <h3> <img src=${user.Poster} /> </h4>
        <p> <b>${user.Title}</b> </p>
  
    </div>
  </div>` ) .join("")
  }
  